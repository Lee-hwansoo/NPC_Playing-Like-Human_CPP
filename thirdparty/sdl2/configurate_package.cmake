project(
  SDL2
  LANGUAGES CXX
  VERSION 2.30.8
  DESCRIPTION "Simple DirectMedia Layer"
  HOMEPAGE_URL "https://github.com/libsdl-org/SDL.git"
)

set(${PROJECT_NAME}_GIT_TAG release-2.30.8 CACHE STRING "SDL2 git tag")
set(${PROJECT_NAME}_PREFIX ${CMAKE_BINARY_DIR}/${PROJECT_NAME}-prefix CACHE STRING "SDL2 install prefix")
set(${PROJECT_NAME}_INSTALL_PATH ${CMAKE_SOURCE_DIR}/thirdparty/install/${CMAKE_BUILD_TYPE}/${PROJECT_NAME} CACHE STRING "SDL2 install path")
set(${PROJECT_NAME}_CMAKE_PATH ${${PROJECT_NAME}_INSTALL_PATH}/lib/cmake/sdl2 CACHE STRING "SDL2 cmake path")
set(${PROJECT_NAME}_CMAKE_ARGS
-DCMAKE_INSTALL_PREFIX=${${PROJECT_NAME}_INSTALL_PATH}
-DCMAKE_BUILD_TYPE=${CMAKE_BUILD_TYPE}
-DBUILD_SHARED_LIBS=OFF)

set(${PROJECT_NAME}_INCLUDE_PATH ${${PROJECT_NAME}_INSTALL_PATH}/include CACHE STRING "SDL2 include path")

if(WIN32)
  set(${PROJECT_NAME}_LIBRARIES SDL2 SDL2main imm32 version winmm CACHE STRING "SDL2 library path")
else()
  set(${PROJECT_NAME}_LIBRARIES SDL2 CACHE STRING "SDL2 library path")
endif()
